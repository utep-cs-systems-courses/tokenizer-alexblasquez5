#comments begin with #

#list of object files
OBJS= uimain.o tokenizer.o history.o

# -g for debug, -O3 for optimization
CFLAGS = -g -O3

# first target is built by default
all: tokenizer

# tokenizer (target) depends on all object files (prerequisites)
tokenizer: $(OBJS)
	cc -o tokenizer $(CFLAGS) $(OBJS)

# Include file dependencies
tokenizer.o: tokenizer.h tokenizer.c
history.o: history.h history.c
uimain.o: tokenizer.h history.h

# clears files generated by compilation
clean:
	rm -f *.o tokenizer

# runs tokenizer
run: tokenizer
	./tokenizer

